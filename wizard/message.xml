<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="material_message_wizard" model="ir.ui.view">
            <field name="name">material.message.wizard</field>
            <field name="model">material.message.wizard</field>
            <field name="arch" type="xml">
                <form string="Message">
                    <field name="name"/>
                    <footer>
                        <button name="action_done" string="Confirm" type="object" class="oe_highlight"/>
                        <button string="Cancel" class="btn btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>